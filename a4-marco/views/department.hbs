<div class="row">
    <div class="col-md-12">
        <h1>{{department.departmentName}} - Department: {{department.departmentId}}</h1>
        <hr />
        <form method="post" action="/department/update">            
            <input type="hidden" name="departmentId" value={{department.departmentId}} />
            <label for="departmentName">Department Name:</label>
            <input class="form-control" id="departmentName" name="departmentName" type="text" value={{department.departmentName}} />
            <hr />
            <button type="submit" class="btn btn-primary pull-right">Update Department</button>
        </form>
    </div>
</div>
